# Database Configuration
# For Neon (recommended): Use DATABASE_URL
DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/dbname?sslmode=require

# Alternative: Individual database settings (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_NAME=scheduler
DB_SSL_MODE=prefer

# Neon specific settings (if using individual env vars instead of DATABASE_URL)
NEON_HOST=ep-example.us-east-1.aws.neon.tech
NEON_PORT=5432
NEON_USER=your_neon_user
NEON_PASSWORD=your_neon_password
NEON_DATABASE=your_neon_database

# Application settings
PORT=8080
GO_ENV=development

# API Configuration
API_VERSION=v1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Firebase Authentication Configuration
# Option 1: Service Account JSON file path (recommended for development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Option 2: Service Account JSON as environment variable (recommended for production)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Option 3: Individual Firebase service account variables
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_PRIVATE_KEY_ID=your-private-key-id
# FIREBASE_PRIVATE_KEY="your-firebase-private-key-content-here"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@your-project-id.iam.gserviceaccount.com
# FIREBASE_CLIENT_ID=your-client-id

# Firebase Web API Key (for frontend/testing)
# FIREBASE_API_KEY=your-web-api-key
